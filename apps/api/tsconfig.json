{
  "extends": "@repo/typescript-config/base.json",
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules", "dist"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "module": "ESNext", // (A)
    "moduleResolution": "Node", // (B)
    "strict": true,
    "sourceMap": true,
    // Needed for CommonJS modules
    "allowSyntheticDefaultImports": true, // (C)
    //
    "declaration": true
  }
}
