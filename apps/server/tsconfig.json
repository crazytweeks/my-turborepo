{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": [
    "./src/**/*.spec.ts",
    "./build",
    "./node_modules",
    "./src/**/*.test.ts"
  ]
}
