{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": false
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true
    },
    "start": {
      "cache": true,
      "persistent": true
    }
  },
  "globalDotEnv": ["./.env"]
}
